body { font-family: ubuntu,arial,sans-serif; }

.pdf div { }
.pdf div p  { margin: 1.5em 0; }
.pdf div .form { margin-left: 1em; }

.pdf table { border-collapse: collapse; border: 1px solid black; }
.pdf table th, .pdf table td { padding: 0 0.3em; }
.pdf table th { text-align: left; border: 1px dotted black; }
.pdf table td { vertical-align: middle; border-top: 1px dotted black; border-right: 1px solid black; }
.pdf table tr { vertical-align: middle; }

.pdf table thead th, .pdf table tfoot td { border: 1px solid black; font-weight: bold; }
.pdf table thead th { background-color: lightgray; }
.pdf table tr.niveau-1 th { font-size: 100%; }
.pdf table tr.niveau-2 th { font-size: 80%; }
.pdf table tr.niveau-3 th { font-size: 70%; }
.pdf table td.impair { background-color: #e3e6fd; }
.pdf table .total { font-weight: bold; }