?>

<?php if ($this->url): ?>

    <!-- lien de suppression du fichier -->
    <a id="<?php echo $id ?>"
       class="delete-file btn btn-xs btn-danger" 
       href="<?php echo $url ?>" 
       title="Supprimer le fichier déposé '<?php echo htmlentities($fichier->getNom()) ?>'" 
