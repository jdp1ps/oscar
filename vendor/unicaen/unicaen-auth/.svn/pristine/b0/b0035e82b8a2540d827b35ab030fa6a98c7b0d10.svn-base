        <th class="privilege"><?php echo $privilege ?></th>
        <?php $statut=null; foreach( $roles as $role ): ?>
            <td class="modifier" data-role="<?php echo $role->getId() ?>" data-privilege="<?php echo $privilege->getId() ?>">
